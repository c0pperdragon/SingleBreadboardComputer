; This program needs to be assembled with the Ophis assembler 

.outfile "hello.bin"
.org  $8000

main: 
    LDY #<message
    LDX #>message
    JSR sendstr
    LDA #47
    JSR sendnum
    LDA #11
    JSR sendnum
    LDY #<crlf
    LDX #>crlf
    JSR sendstr
mainloop:    
    LDA #0
    JSR receive
    JSR sendnum
    LDA #32
    JSR send
    jmp mainloop
    
message: 
    .byte "Hello world ", 13, 10, 0
crlf:
    .byte 13, 10, 0

.include "boot.oph"
